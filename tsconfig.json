{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "esModuleInterop": true,
    // Vite/vitest error :
    "skipLibCheck": true,
    "pretty": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "vitest.config.ts",
    "tsup.config.ts"
    // "eslint.config.mjs"
  ]
}
