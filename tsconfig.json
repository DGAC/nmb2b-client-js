{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "erasableSyntaxOnly": true,
    "allowUnreachableCode": false,
    "verbatimModuleSyntax": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "pretty": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "scripts/**/*",
    "vitest.config.ts",
    "tsdown.config.ts"
  ]
}
