{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    // "declaration": true,
    // "sourceMap": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "pretty": true,
    "noUncheckedIndexedAccess": true,
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "tests/**/*",
    "vitest.config.ts",
    "tsdown.config.ts"
    // "eslint.config.mjs"
  ]
}
