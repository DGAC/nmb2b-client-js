{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Vite/vitest error :
    "skipLibCheck": true,
    "noImplicitAny": true,
    "pretty": true,
    "strict": true
  },
  "include": ["src/**/*", "tests/**/*", "tests"],
  "exclude": ["dist", "esm", "node_modules"]
}
